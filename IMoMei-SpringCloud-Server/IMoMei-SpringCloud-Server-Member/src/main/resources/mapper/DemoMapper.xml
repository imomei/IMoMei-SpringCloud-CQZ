<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.imomei.dao.MemberMapper">

    <!--分页查询所有Member-->
    <select id="getMemberList" parameterType="" resultType="Member">
        SELECT
            *
        FROM
            member
    </select>

    <!--根据ID查询Member-->
    <select id="getMemberByID" parameterType="int" resultType="Member">
        SELECT
            *
        FROM
            member
        WHERE
            id = #{id}
    </select>
    
    <!--新增Member-->
    <insert id="setMember" parameterType="Member">
        INSERT INTO
            member
        VALUES
            (#{id}, #{name}, #{age})
    </insert>

</mapper>