<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.imomei.mapper.MemberMapper">

    <!--分页查询所有Member-->
    <select id="getMemberList" resultType="Member">
        SELECT
            *
        FROM
            member
    </select>

    <!--根据ID查询Member-->
    <select id="getMemberByID" parameterType="int" resultType="Member">
        SELECT
            *
        FROM
            member
        WHERE
            id = #{id}
    </select>

    <!--新增Member-->
    <insert id="insMember" parameterType="Member">
        INSERT INTO
            member
        VALUES
            (#{id}, #{name}, #{age})
    </insert>

    <!--修改Member-->
    <update id="updMember" parameterType="Member">
        UPDATE member
        SET
            name = #{name},
            age  = #{age}
        WHERE
            id = #{id}
    </update>

    <!--根据ID删除Member-->
    <delete id="delMember" parameterType="String">
        DELETE
        FROM
            member
        WHERE
            id = #{id}
    </delete>

</mapper>